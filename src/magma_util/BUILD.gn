import("//magma/gnbuild/magma.gni")

config("magma_util_config") {
  if (is_debug) {
    defines = [ "MAGMA_DEBUG_INTERNAL_USE_ONLY=1" ]
  } else {
    defines = [ "MAGMA_DEBUG_INTERNAL_USE_ONLY=0" ]
  }
}

group("magma_util") {
  public_configs = [
    ":magma_util_config",
    "$magma_build_root:magma_src_include_config",
  ]

  deps = [
    ":common",
    ":system",
  ]
}

source_set("common") {
  public_configs = [
    ":magma_util_config",
    "$magma_build_root:magma_src_include_config",
  ]

  sources = [
    "dlog.h",
    "macros.h",
    "mutex.h",
  ]
}

source_set("system") {
  public_configs = [
    ":magma_util_config",
    "$magma_build_root:magma_src_include_config",
  ]

  sources = [
    "address_space_allocator.h",
    "simple_allocator.cc",
    "simple_allocator.h",
  ]
}
