import("//magma/gnbuild/magma.gni")

source_set("buffer") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_buffer.cc",
  ]

  deps = [
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("device") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_device.cc",
    "magenta_platform_device.h",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("futex") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_futex.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("connection") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_connection.cc",
  ]

  deps = [
    ":event",
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/include:msd_abi",
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("thread") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_thread.cc",
  ]
}

source_set("event") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_event.cc",
  ]

  deps = [
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
  ]
}
