import("//magma/gnbuild/magma.gni")

declare_args() {
  magma_indriver_test = ""
}

source_set("main") {
  sources = [
    "driver_main.cpp",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/sys_driver",
  ]

  libs = [
    "driver",
    "ddk",
    "magenta",
  ]
}

source_set("test_driver") {
  testonly = true

  configs += [ "$magma_build_root:magma_tests_include_config" ]

  sources = [
    "driver_main.cpp",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/sys_driver",
    "$magma_build_root/tests/helper:platform_device_helper",
  ]

  defines = []

  if (magma_indriver_test == "msd_unit_tests") {
    # Don't create the device, let the unit tests create and destroy it.
    defines += [ "MAGMA_CREATE_DEVICE=0" ]
    defines += [ "MAGMA_INDRIVER_TEST=1" ]
    sources += [ "driver_test_gtest.cc" ]
    deps += [
      "$magma_build_root/tests/unit_tests:magma_platform_tests",
      "$magma_build_root/tests/unit_tests:msd_abi_conformance_tests",
      "$msd_gtest_target",
      "//third_party/gtest",
    ]
  } else if (magma_indriver_test != "") {
    assert(false)
  }

  libs = [
    "driver",
    "ddk",
    "magenta",
  ]
}
