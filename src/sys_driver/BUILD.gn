import("//magma/gnbuild/magma.gni")

source_set("sys_driver") {
  public_deps = [
    ":platform_buffer",
    "$magma_build_root/include:msd_abi",
    "$magma_build_root/src/magma_util",
  ]

  sources = [
    "magma_driver.h",
    "magma_system.cc",
    "magma_system_buffer.cc",
    "magma_system_buffer.h",
    "magma_system_connection.cc",
    "magma_system_connection.h",
    "magma_system_context.cc",
    "magma_system_context.h",
    "magma_system_device.cc",
    "magma_system_device.h",
  ]
}

config("magma_system_interface_config") {
  include_dirs = [ "." ]
}

source_set("magma_system_interface") {
  public_configs = [ ":magma_system_interface_config" ]
  sources = [
    "magma_system.h",
  ]
}

source_set("platform_buffer") {
  public_deps = [
    "$magma_build_root/include:msd_abi",
    "$magma_build_root/src/magma_util",
  ]

  sources = [
    "magenta_platform_buffer.cc",
  ]

  libs = [ "ddk" ]
}
