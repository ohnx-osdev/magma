import("//magma/gnbuild/magma.gni")

# Magma App Driver ABI
config("mad_abi_config") {
  include_dirs = [ "mad_abi" ]
}

source_set("mad_abi") {
  public_configs = [ ":mad_abi_config" ]

  sources = [
    "mad_abi/magma.h",
    "mad_abi/magma_defs.h",
  ]

  public_deps = [
    ":mad_abi_common",
  ]
}

source_set("mad_abi_common") {
  public_configs = [ ":mad_abi_config" ]

  sources = [
    "mad_abi/magma_common_defs.h",
  ]
}

# Magma System ABI
config("sys_abi_config") {
  include_dirs = [ "sys_abi" ]
}

source_set("sys_abi") {
  public_configs = [ ":sys_abi_config" ]

  sources = [
    "sys_abi/magma_system.h",
    "sys_abi/magma_system_display_abi.h",
  ]

  public_deps = [
    ":sys_abi_common",
  ]
}

source_set("sys_abi_common") {
  public_configs = [ ":sys_abi_config" ]

  sources = [
    "sys_abi/magma_system_common_defs.h",
  ]

  public_deps = [
    ":mad_abi_common",
  ]
}

# Magma System Driver ABI
config("msd_abi_config") {
  include_dirs = [ "msd_abi" ]
}

source_set("msd_abi") {
  public_configs = [ ":msd_abi_config" ]

  sources = [
    "msd_abi/msd.h",
    "msd_abi/msd_defs.h",
  ]

  public_deps = [
    ":sys_abi_common",
  ]
}
