import("//magma/gnbuild/magma.gni")

config("gpureadback_public_config") {
  include_dirs = [ "." ]
}

source_set("gpureadback") {
  testonly = true

  public_configs = [ ":gpureadback_public_config" ]

  cflags = [ "-std=c++0x" ]

  sources = [
    "gpureadback.h",
    "magma_readback_test.cc",
    "magma_readback_test.h",
  ]

  public_deps = [
    "$mesa_build_root:magma_framework",
  ]
}

executable("gpu_readback_test") {
  testonly = true

  sources = [
    "main.c",
  ]
  deps = [
    ":gpureadback",
  ]
}
