import("//magma/gnbuild/magma.gni")

use_vulkan_loader = true

executable("vkcube") {
  include_dirs = [ "." ]

  sources = [
    "$magma_build_root/third_party/vkcube/cube.cc",
    "main.cc",
  ]

  public_deps = [
    "$magma_build_root/src/magma_util"
  ]
  if (use_vulkan_loader) {
    public_deps += [ "//magma:vulkan" ]
  } else {
    public_deps += [ "$mesa_build_root:magma_vulkan" ]
  }
}
