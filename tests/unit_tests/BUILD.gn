import("//magma/gnbuild/magma.gni")

executable("magma_sys_unit_tests") {
  sources = [
    "main.cc",
  ]

  deps = [
    ":magma_system_tests",
    ":magma_util_tests",
    "$magma_build_root/tests/mock:platform_buffer",
    "//third_party/gtest",
  ]
}

executable("magma_app_unit_tests") {
  sources = [
    "main.cc",
  ]

  deps = [
    ":libmad_tests",
    "//third_party/gtest",
  ]
}

source_set("libmad_tests") {
  sources = [
    "test_magma_buffer.cc",
  ]

  deps = [
    "$magma_build_root/include:mad_abi",
    "$magma_build_root/src/app_driver",
    "$magma_build_root/tests/mock:magma_system",
    "//third_party/gtest",
  ]
}

source_set("magma_system_tests") {
  sources = [
    "test_magma_system_buffer.cc",
    "test_magma_system_connection.cc",
    "test_magma_system_context.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/sys_driver",
    "$magma_build_root/tests/helper:command_buffer_helper",
    "$magma_build_root/tests/mock:msd",
    "//third_party/gtest",
  ]
}

source_set("magma_util_tests") {
  sources = [
    "test_address_space_allocator.cc",
    "test_macros.cc",
    "test_mutex.cc",
    "test_refcounted.cc",
    "test_sleep.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "//third_party/gtest",
  ]
}

source_set("magma_platform_tests") {
  sources = [
    "test_mmio.cc",
    "test_platform_buffer.cc",
    "test_platform_device.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/magma_util/platform",
    "$magma_build_root/tests/helper:platform_device_helper",
    "$magma_build_root/tests/mock:mmio",
    "//third_party/gtest",
  ]
}

source_set("msd_abi_conformance_tests") {
  sources = [
    "test_msd_buffer.cc",
    "test_msd_context.cc",
    "test_msd_device.cc",
    "test_msd_driver.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util/platform",
    "$magma_build_root/tests/helper:platform_device_helper",
    "//third_party/gtest",
  ]
}
