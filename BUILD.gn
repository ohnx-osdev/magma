import("//magma/gnbuild/magma.gni")

group("magma_service_driver") {
  deps = [
    "$msd_intel_gen_build_root(//build/toolchain/fuchsia:${target_cpu}-shared)",
  ]
}

group("magma_service_driver_test") {
  testonly = true

  deps = [
    "$msd_intel_gen_build_root:test(//build/toolchain/fuchsia:${target_cpu}-shared)",
  ]
}

source_set("libmad") {
  public_deps = [
    "include:mad_abi",
  ]

  deps = [
    "src/app_driver",
  ]
}

# This config allows inclusion of headers via relative paths from src
config("magma_src_include_config") {
  include_dirs = [ "src" ]
}

# This config allows inclusion of headers via relative paths from tests
config("magma_tests_include_config") {
  include_dirs = [ "tests" ]
}

# internal only
source_set("libmsd") {
  deps = [
    "src/sys_driver",
  ]
  public_deps = [
    "include:msd_abi",
  ]
}

group("magma_tests") {
  testonly = true

  deps = [
    "tests",
  ]
}
